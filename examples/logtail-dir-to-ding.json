{
  "port": 54321,
  "default_format": {
    "prefix": "!!!!-!!-!!"
  },
  "transfers": {
    "ding-alarm": {
      "name": "ding-alarm",
      "type": "ding",
      "prefix": "LOG ERROR ",
      "url": "https://oapi.dingtalk.com/robot/send?access_token=xxxxxx"
    }
  },
  "routers": {
    "xxx": {
      "name": "xxx",
      "matchers": [
        {
          "contains": [
            "ERROR"
          ],
          "not_contains": [
            "Normal-Error"
          ]
        }
      ],
      "transfers": [
        "ding-alarm"
      ]
    }
  },
  "servers": {
    "xxx-service": {
      "name": "xxx-service",
      "routers": [
        "xxx"
      ],
      "file": {
        "path": "/logs/xxx-service/",
        "recursive": true,
        "suffix": ".log",
        "method": "timer"
      }
    }
  }
}
